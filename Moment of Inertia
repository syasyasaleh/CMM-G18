import math

def blade_moment_of_inertia(blade_weight_N, blade_length_m, model="rod"):
    """
    Estimate the moment of inertia of a turbine blade about the hub.

    Parameters
    ----------
    blade_weight_N : float
        Weight of the blade in Newtons (N).
    blade_length_m : float
        Length of the blade from hub to tip (m).
    model : str, optional
        "rod"  → assume uniform slender rod (I = 1/3 * m * L^2)
        "point" → assume all mass at the tip (I = m * L^2)

    Returns
    -------
    float
        Moment of inertia about the hub (kg·m²)
    """
    g = 9.81  # m/s²
    m = blade_weight_N / g  # convert N → kg

    if model.lower() == "rod":
        I = (1/3) * m * blade_length_m**2
    elif model.lower() == "point":
        I = m * blade_length_m**2
    else:
        raise ValueError("model must be 'rod' or 'point'")

    return I

# Example usage:
blade_weight = 85000   # N 
blade_length = 85      # m
I = blade_moment_of_inertia(blade_weight, blade_length, model="rod")

print(f"Moment of inertia about hub: {I:,.2f} kg·m²")
